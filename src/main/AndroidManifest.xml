<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luka.dodgetheshark"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="com.luka.dodgetheshark.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.luka.dodgetheshark.HomePageActivity"
            android:label="@string/title_activity_ss_main"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name="com.luka.dodgetheshark.GameActivity"
            android:label="@string/title_activity_ss_main"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.luka.dodgetheshark.HSActivity"
            android:label="@string/title_activity_ss_main"
            android:permission="android.permission.READ_EXTERNAL_STORAGE"
            android:screenOrientation="landscape">
        </activity>
    </application>
</manifest>
